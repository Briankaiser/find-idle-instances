{
  "version": "1.0.0-*",
  "description": "Detects and optionally terminates idle AWS instances by tag:name",
  "authors": [ "brian.kaiser" ],
  "buildOptions": {
    "emitEntryPoint": true,
    "compile": {
      "exclude": [ "artifacts" ]
    },
    "debugType": "portable"
  },
  "dependencies": {
    "AWSSDK.CloudWatch": "3.2.6-beta",
    "AWSSDK.EC2": "3.2.6-beta",
    "System.Threading.Tasks.Parallel": "4.0.1",
    "Microsoft.Extensions.CommandLineUtils": "1.0.0",
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "1.0.0"
    }
  },

  "commands": {
    "find-idle-instances": "find-idle-instances"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": "dnxcore50"
    }
  }
}
